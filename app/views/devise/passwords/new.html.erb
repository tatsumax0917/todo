<h2>パスワードの再設定</h2>

<%= form_with(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control ', placeholder: "登録済みのメールアドレスを入力してください" %>
    <%= render 'partials/error', attribute: :email %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードをリセットする", class: 'form-control btn btn-success mt-4' %>
  </div>
<% end %>

