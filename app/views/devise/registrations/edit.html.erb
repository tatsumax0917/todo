<h2>ユーザー情報の編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autocomplete: "name", autofocus: true, class: 'form-control' %>
    <%= render 'partials/error', attribute: :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    <%= render 'partials/error', attribute: :email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <p class="fs-6 text-warning my-4">パスワードを変更する場合は<br>現在のパスワードと新しいパスワードを入力してください</p>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %> 
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
    <%= render 'partials/error', attribute: :password %>
  </div>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "8～16文字で入力してください" %>
    <%= render 'partials/error', attribute: :password, error_num: 0 %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認用 新しいパスワード" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "8～16文字で入力してください" %>
    <%= render 'partials/error', attribute: :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: 'form-control btn btn-success mb-4 mt-4' %>
  </div>
<% end %>

<%= link_to "タスク管理へ戻る", root_path, class: 'w-50 mx-auto form-control btn btn-secondary mb-4 mt-2' %>

<div>
<%= link_to "アカウント削除", cancel_user_registration_path, class: "w-50 mx-auto  form-control btn btn-danger mb-4 mt-2" %>

</div>

