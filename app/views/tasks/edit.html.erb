<%= form_with(model: @task) do |f| %>
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 col-8">
      <%= f.text_field :content, value: @task.content, class: 'form-control mb-5', autofocus: true %>  
    </div>
    <div class="col-1">
      <%= f.submit "更新", class: "btn btn-outline-primary mb-4" %>
    </div>
  </div>
<% end %>