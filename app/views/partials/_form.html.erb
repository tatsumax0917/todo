<%= turbo_frame_tag task do %>
  <%= form_with(model: @task) do |f| %>
    
  <div class="row justify-content-center mt-3">
    <div class="col-md-6 col-7">
      <%= f.text_field :content, value: @task.content, class: 'form-control', autofocus: true %>  
    </div>
    <div class="col-md-1 col-4 d-flex">
      <div>
        <%= f.submit "更新", class: "btn btn-outline-primary" %>
      </div>
      <div>
        <%= f.submit "戻る", class: "btn btn-outline-primary mx-1" %>
      </div>
    </div>
  </div> 
</div>
      
  <% end %>
<% end %>
