<header>
  <nav class="navbar bg-body-tertiary fixed-top">
    <div class="container">
      <a class="navbar-brand fw-bold" href="<%= root_path %>">ToDo App</a>
      <button class="navbar-toggler d-md-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <ul class="d-none d-md-flex">
        <% if user_signed_in? %>
          <li class="nav-item d-flex me-3">
            <%= link_to current_user.name, edit_user_registration_path, class: "nav-link", aria: { current: "page" } %>
          </li>
          <li class="nav-item d-flex me-3">
            <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
